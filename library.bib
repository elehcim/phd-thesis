author = {Papastergis, E. and Adams, E. A. K. and van der Hulst, J. M.},
doi = {10.1051/0004-6361/201628410},
eprint = {1602.09087},
issn = {0004-6361},
journal = {A{\&}A},
pages = {A39},
title = {{An accurate measurement of the baryonic Tully-Fisher relation with heavily gas-dominated ALFALFA galaxies}},
url = {http://www.aanda.org/10.1051/0004-6361/201628410},
volume = {593},
year = {2016}
}
@article{Wetzel2012,
